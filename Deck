package com.example.fx;

import com.example.fx.Card.Rank;
import com.example.fx.Card.Suit;

public class Deck {

        private Card[] cards = new Card[26];

        public Deck(){
            refill();
        }

        public final void refill(){
            int i=0;
            for(Suit suit : Card.Suit.values()){
                for (Rank rank : Card.Rank.values()){
                    cards[i++] = new Card(suit,rank);
                }
            }
        }

        public Card drawCard(){
            Card card=null;
            while (card==null){
                int index= (int)(Math.random()* cards.length);
                card= cards[index];
                cards[index]=null;
            }
            return card;
        }
}
